

<body>
  <% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
  <% end %>

  <div class="container">
   <h2>個人情報の編集</h2>
   <div class="row">
     <div class="col-sm-12 col-md-3">
     </div>

     <div class="col-sm-12 col-md-9">
       <%# if @user.id == current_user.id %>
       <%= form_for(@user,url: adminster_path) do |f| %>

       <% if @user.errors.any? %>
       <div id="error_explanation">
        <h2><%= @user.errors.count %>件のエラーがあります。</h2>

        <ul>
          <%= @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>


      <!-- 個人情報 -->
      <div class="field has-success">
        <%= f.label :first_name, "苗字:" %><br>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="field has-success">
        <%= f.label :first_name_kana, "苗字(カナ):" %><br>
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
      <div class="field has-success">
        <%= f.label :last_name, "名前:" %><br>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="field has-success">
        <%= f.label :last_name_kana, "名前(カナ):" %><br>
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
      <div class="field has-success">
        <%= f.label :post_code, "郵便:" %><i>　例）1234567(ハイフン無し)</i><br>
        <%= f.text_field :post_code, class: "form-control" %>
      </div>
      <div class="field has-success">
        <%= f.label :address, "住所:" %><br>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="field has-success">
        <%= f.label :phone, "電話:" %><i> 例）01234567890(ハイフン無し)</i><br>
        <%= f.text_field :phone, class: "form-control" %>
      </div>
      <div class="field has-success">
        <%= f.label :email, "メールアドレス:" %><br>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <%#= f.hidden_field :password,value: @user.password %>
      <%#= f.hidden_field :password_confirmation,value: @user.password %>


      <br>

      <!-- 個人情報更新するボタン -->
      <div class="actions">
        <%= f.submit"更新", class:"btn btn-lg btn-block btn-info" %>
        <% end %>

      </div>
    </div>
  </div>



</div><br><br>
</body>

