<body>
  <section>
      <div class="container">
        <div class="row">
          <div class="col-md-offset-3 col-md-6">

            <div class="form-user">
              <div class="form-header text-center">
                <h2 class="form-header-title">ユーザーの登録</h2>
              </div>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="form-group">
                  <%= f.text_field :last_name, autofocus: true, :class => "form-control" , :placeholder => "苗字"%>
                  <%= f.text_field :last_name_kana, :class => "form-control" , :placeholder => "苗字(カナ)"%>
                </div>

                <div class="form-group">
                  <%= f.text_field :first_name, :class => "form-control" , :placeholder => "名前"%>
                  <%= f.text_field :first_name_kana, :class => "form-control" , :placeholder => "名前(カナ)"%>
                </div>

                <div class="form-group">
                  <%= f.email_field :email, :class => "form-control" , :placeholder => "メールアドレス" %>
                </div>

                <div class="form-group">
                  <%= f.text_field :post_code, :class => "form-control" , :placeholder => "郵便番号 例）1234567(ハイフン無し)"%>
                </div>

                <div class="form-group">
                  <%= f.text_field :address, :class => "form-control" , :placeholder => "住所" %>
                </div>

                <div class="form-group has-feedback">
                  <%= f.text_field :phone, :class => "form-control" , :placeholder => "電話番号 例）01234567890(ハイフン無し)"%>
                </div>

                <div class="form-group has-feedback">
                      <% if @minimum_password_length %>
                      <em>(パスワードは <%= @minimum_password_length %>文字以上で作成してください)</em>
                      <% end %><br />
                  <%= f.password_field :password, :class => "form-control" , :placeholder => "パスワード"%>
                  <%= f.password_field :password_confirmation, :class => "form-control" , :placeholder => "パスワード確認"%>
                </div>

                <%= f.submit "新規登録" , :class => "btn btn-lg btn-block btn-info"%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
</body>

